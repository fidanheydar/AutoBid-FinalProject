@model UpdateDto
<div class="container">
 <form method="post" enctype="multipart/form-data">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>

                <input type="text"  asp-for="Name" class="form-control" />
                <span class="text text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Surname</label>
                <input type="text"  asp-for="Surname" class="form-control" />
                <span class="text text-danger" asp-validation-for="Surname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>

                <input type="email" asp-for="Email" class="form-control" />
                <span class="text text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserName">UserName</label>

                <input  asp-for="UserName" class="form-control" />
                <span class="text text-danger" asp-validation-for="UserName"></span>
            </div>
         <div class="form-group">
            <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span class="text text-danger" asp-validation-for="Password"></span>
        </div>
         <div class="form-group">
            <label asp-for="ConfirmedPassword">ConfirmPassword</label>
            <input type="password" asp-for="ConfirmedPassword" class="form-control" />
            <span class="text text-danger" asp-validation-for="ConfirmedPassword"></span>
        </div>
        <div class="button-box">
            <div class="login-toggle-btn">

            </div>
            <button type="submit" style="width:100%; " class="btn btn-outline-dark">Update</button>

        </div>
    </form>

</div>
